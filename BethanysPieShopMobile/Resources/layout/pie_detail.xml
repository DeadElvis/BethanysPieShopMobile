
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:background="@drawable/patternwide">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal" 
        android:id="@+id/pieImageView"
        android:contentDescription="@string/app_name"/>
    <TextView
        android:text="Pie Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pieNameTextView"
        style="@style/BethanysGreenText"
        android:textSize="14dp"
        android:textStyle="bold" 
        android:paddingTop="10dp"
        />
    <TextView
        android:text="Short Description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/shortDescriptionTextView"
        android:textColor="@android:color/black"
        android:textSize="12dp"
        android:paddingTop="10dp"/>
    <TextView
        android:text="Pellentesque mollis imperdiet imperdiet.  placerat pulvinar. In aliquet diam justo, sit amet tempor lectus auctor nec. Etiam at suscipit neque."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/descriptionTextView"
        android:editable="false"
        android:textColor="@android:color/black"
        android:textSize="8dp"
        android:paddingTop="10dp"
        android:layout_marginBottom="0.0dp" />
    <TextView
        android:text="Price: 10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/priceTextView"
        android:textColor="@android:color/black"
        android:textSize="12dp"
        android:paddingTop="10dp"
        android:textStyle="bold" />
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="20px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout1" >
        <TextView
            android:text="Amount: "
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@android:color/black"
            android:textSize="12dp"
            android:paddingTop="10dp"
            android:textStyle="bold"/>
        <EditText
            android:inputType="number"
            android:text="1"
            android:hint="1"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:id="@+id/amountEditText"
            android:textColor="@android:color/black"
            android:background="@android:color/white"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>
    </LinearLayout>
    <Button
        android:text="Add To Cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/addToCartButton"
        android:backgroundTint="#23cfa7"
        android:width="200dp"
        android:layout_marginTop="10dp"/>

</LinearLayout>